@using SampleProjects.Utilities
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/xcm/core.css" rel="stylesheet" />
    <link href="~/Content/xcm/dragula.css" rel="stylesheet" />
    <link href="~/Content/xcm/font.css" rel="stylesheet" />
    <link href="~/Content/xcm/handsontable.full.min.css" rel="stylesheet" />
    <link href="~/Content/xcm/pikaday.css" rel="stylesheet" />
    <link href="~/Content/xcm/select2.css" rel="stylesheet" />
    <link href="~/Content/xcm/semantic.min.css" rel="stylesheet" />
<style>
    /* Overrides */
    body,
    html {
        height: 100%;
        min-width: 1140px;
        min-height: 600px;
        font-family: museo-300;
    }

    header .ui.pointing.menu .active.item {
        background-color: transparent;  
    }

    header .ui.inverted.menu .item:before {
        background: none;
    }

    header .ui.inverted.pointing.menu .active.item:after {
        background: #4c5976;
    }

    #headermenu > a.item {
        font-family: museo-300;
        letter-spacing: 1px;
        margin-top: 5px;
        margin-bottom: 12px;
        padding: 10px 5px;
        margin-right: 1rem;
        margin-left: 0.5rem;
    }

        #headermenu > a.item :hover {
            background-color: red;
        }

    #headermenu #profilelnk {
        border-bottom: none;
    }

    #subheader .viewdropdown .menu {
        background: rgb(240, 240, 240);
    }

    #subheader a {
        font-size: 1rem;
    }

        #subheader a::after {
            content: none;
        }

        #subheader a.active.item {
            border: none;
        }

    #workspace #addTask {
        border-bottom-left-radius: 1.5em;
        border-top-left-radius: 1.5em;
        cursor: pointer;
        background-color: rgb(100, 121, 152);
    }

    .ui.grid > .row {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    #dgrid th, #jurisdiction-grid th, #assembly-grid th, #shipping-grid th, #efile-grid th, #ext-grid th, #checklists-grid th, #all-grid th {
        cursor: pointer;
        background-color: rgb(245,245,245);
        /*background-color: rgb(250,250,250);*/
        /*font-family: museo-500;*/
        font-family: Arial;
        letter-spacing: 0.6px;
        color: rgb(72,72,72);
    }

    /* start of the css as per the changes in the grid color and background and font */

    #workspace #addTask {
        border-radius: .2857rem;
        /*background-color: rgb(247, 178, 51);*/
        text-transform: uppercase;
    }

    #dgrid thead th {
        font-family: 'Roboto Condensed', sans-serif;
        font-weight: 500;
        /*color: #445978;
                background-color: rgb(231,232,234);*/
        color: rgb(255,255,255);
        text-align: left;
        background-color: rgb(102,122,155);
        border: 0px;
        border-right: 1px dotted transparent;
        border-left: 1px dotted transparent;
    }

        #dgrid thead th .columnSorting.ascending::after, #dgrid thead th .columnSorting.descending::after {
            color: white;
        }

        #dgrid thead th:hover {
            border-right-color: white;
            border-left-color: white;
        }

    #dgrid tbody th {
        background-color: rgb(255, 255, 255);
    }

    #dgrid tbody tr:nth-child(even) td, #dgrid tbody tr:nth-child(even) th {
        background-color: rgb(248, 248, 248);
    }

    #dgrid tbody tr th:first-child {
        border-left: none;
        border-right: none;
        border-bottom: 1px solid rgb(231,232,234);
        /*padding: 1px;*/
    }

    #dgrid tbody tr td {
        border-left: none;
        border-right: none;
        border-bottom: 1px solid rgb(231,232,234);
        /*padding:1px;*/
        text-overflow: ellipsis;
    }

        #dgrid tbody tr td:last-child {
            border-right: none;
        }

    #dgrid .handsontable .relative {
        width: 100%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* End */

    #dgrid td, #jurisdiction-grid td, #assembly-grid td, #shipping-grid td, #efile-grid td, #ext-grid td, #checklists-grid td, #all-grid td {
        color: rgb(109,109,109);
    }

        #dgrid td.clientName a {
            /*font-style: italic;*/
            /*color: rgb(152, 152, 152);*/
        }

    .ui.table tr td, .ui.celled.table tr td, .ui.celled.table tr th {
        border-top: none;
        border-left: none;
    }

    #engagement-grid div {
        padding-bottom: 0px;
    }

    .ui.pointing.menu .active.item {
        /*background-color: transparent;*/
        /*border-bottom: 1px solid orange;*/
        border-bottom: 1px solid rgb(234,100,49);
    }

    #tabTaskInfo .active.item {
        /*background-color: transparent;*/
        font-weight: bold;
        border-bottom: 3px solid orange;
    }

    .ui.pointing.menu .active.item:after {
        /*background-color: transparent;
                width: 0.5em;
                height: 0.5em;*/
        background-color: transparent;
        width: 0.5em;
        height: 0.5em;
        border-bottom: 1px solid rgb(234,100,49);
        border-right: 1px solid rgb(234,100,49);
        /*border-bottom: 1px solid orange;*/
        /*border-right: 1px solid orange;*/
    }

    .ui.inverted.menu .header.item {
        background-color: transparent;
    }

    .dragzone .attached.segment {
        padding: 0.5rem;
        cursor: -webkit-grab;
    }

    .dropzone .attached.segment {
        padding: 0.5rem;
        cursor: -webkit-grab;
    }

    #columndisplay .attached.segment {
        padding: 0.3rem;
    }

    #filterview {
        width: 600px;
    }

    #filtersview .column {
        margin-top: 12px;
    }

    .ui.search > .results {
        max-height: 275px;
        overflow-y: auto;
    }

    #filterview .ui.search .prompt {
        height: 30px;
        border-radius: .2857rem;
    }

    .ui.image.label {
        margin-bottom: 3px;
    }

    .ui.grid {
        margin: 0;
    }

    header .select2-container--default .select2-selection--single {
        border-radius: 15px;
        /*margin-top: 2px;*/
        /*height: 15px;*/
    }

    header .ui.icon.input input {
        margin: 0;
    }

    select2-dropdown select2-dropdown--below {
        margin-top: 3px;
        border-top: 1px solid grey;
    }

    #JurisdictionListID {
        padding: 2px;
        font-size: 12px;
        box-shadow: none;
    }

    ul#selectedlist li {
        float: left;
        padding: 6px 20px;
        width: 100%;
        height: 25px;
        color: #fff;
        margin-bottom: 10px;
        background-color: rgb(89,110,131);
        border-radius: 15px;
        font-size: 11px;
    }

    ul#selectedlistAssemblyAttachment li {
        float: left;
        padding: 6px 20px;
        width: 100%;
        height: 30px;
        color: #fff;
        margin-bottom: 10px;
        background-color: rgb(105, 146, 187);
        border-radius: 15px;
        font-size: 14px;
    }

    ul.list > li {
        padding: 3px;
        font-size: 11px;
    }

    div[id^=tab] .ui.attached.segment {
        padding: 0px;
        border: none;
    }

    .qsclientname {
        float: left;
        width: 50%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .qsaccno {
        display: inline-block;
        float: left;
        width: 25%;
        text-align: right;
    }

    .qslocation {
        float: right;
    }


    .pointseditor kbd {
        display: inline-block;
        border: 1px solid #ccc;
        margin: -2px 0.1em 0;
        padding: 0.1em 0.6em;
        line-height: 1.4;
        font-size: 11px;
        background-color: #f8f8f8;
        box-shadow: 0 1px 0 #bbb, 0 0 0 2px #fff inset;
        border-radius: 3px;
        color: #555;
        text-shadow: 0 1px 0 #fff;
        white-space: nowrap;
        vertical-align: middle;
    }

    .pointseditor .wk-commands,
    .pointseditor .wk-switchboard {
        display: inline-block;
    }

    .pointseditor .wk-wysiwyg {
        outline: none;
    }

    .pointseditor .wk-mode-active {
        background-color: rgba(255, 255, 255, 0.8);
    }

    .pointseditor .gh-fork {
        position: fixed;
        top: 0;
        right: 0;
        border: 0;
        z-index: 1;
    }

    .pointseditor .wk-wysiwyg {
        height: 150px;
        /*width: 500px;*/
        border: 1px solid gray;
        overflow-y: auto;
    }

    .pointseditor button[title~="Image"], .pointseditor button[title~="Blockquote"],
    .pointseditor button[title~="Code"], .pointseditor button[title~="Hyperlink"],
    .pointseditor button[title~="Preview"] {
        display: none;
    }

    .tahidden .wk-commands, .tahidden .wk-switchboard {
        display: none;
    }

    #taskinfoEditGrid div.column {
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
    }

    /*.ht_clone_left .wtHolder {
                overflow: hidden;
            }*/
    #all-grid .ht_clone_left .wtHolder, #all-grid .ht_clone_corner, #checklists-grid .ht_clone_left .wtHolder, #checklists-grid .ht_clone_corner {
        display: none;
        /*overflow: hidden;*/
    }

    .ui.inverted.dimmer {
        background: rgba(255,255,255,0.40);
    }

        .ui.inverted.dimmer .ui.loader {
            color: rgba(0,0,0,1.0);
            font-size: 1.1em;
        }

    .disableoption {
        opacity: .4 !important;
        pointer-events: none;
    }

    #tabShipping .ui.menu .item:hover {
        background-color: transparent;
    }

    #tabShipping .ui.menu .item:before {
        background: none;
    }

    tr[title^="Jur"] td, tr[title^="Del"] td {
        background-color: rgb(245,245,245);
        opacity: 0.5;
    }

    tr[title^="Jur"]:hover td, tr[title^="Del"]:hover td {
        cursor: not-allowed;
    }

    #assembly-grid tr td.comments, #ext-grid tr td.comments, #shipping-grid tr td.comments {
        white-space: normal;
        word-wrap: break-word;
    }

    #extinstructions div.label {
        background-color: #eaf1f4;
    }

    #tableEngagementInformation tbody tr td:first-child {
        width: 300px;
    }

    #tableEngagementInformation tbody tr td, #tableSchedulingandFinancialsInformation tbody tr td, #tablePartnerRotation tbody tr td, #tableClientAcceptance tbody tr td {
        padding: 3px;
    }

    #tableEngagementInformation, #tableSchedulingandFinancialsInformation, #tablePartnerRotation, #tableClientAcceptance {
        border: none;
        font-family: museo-300;
    }

        #tablePartnerRotation tbody tr td:first-child {
            width: 185px;
        }

        #tableClientAcceptance tbody tr td:first-child {
            width: 220px;
        }

    .ui.pointing.menu .active.item.viewdropdown:after {
        content: none;
    }

    .ui.pointing.menu .active.item.userprofile:after {
        content: none;
    }

    .column.engagementSecondaryGridFirst {
        padding: 0px !important;
        padding-right: 3px !important;
    }

    .column.engagementSecondaryGridSecond {
        padding: 0px !important;
        padding-left: 3px !important;
    }

    .column.customgridEvenColumn {
        padding: 0px !important;
    }
</style>
<script>
        (function () {
            window.routemap = '/';
        }());
</script>
</head>
<body style="background-color:white;">
    <div class="ui padded grid">
        <div id="pagecontent" class="sixteen wide column">
            <header class="row">
                <div id="headermenu" class="ui inverted pointing menu" style="margin:0; border-radius:0;background-color: #445978; @*background-color: rgb(68,89,120);*@">
