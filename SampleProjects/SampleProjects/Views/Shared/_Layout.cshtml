                    </div>
                    @RenderSection("subheader", false)
                </div>                
            </header>
            @RenderBody()
        </div>

        <div id="pagefooter" class="row">
            <footer class="sixteen wide column">
                <div class="ui basic segment">
                    <p>&copy; 2016 <a href="http://xcmsolutions.com">XCM Solutions LLC</a>, All rights reserved.</p>
                </div>
            </footer>
        </div>
    </div>
    <div id="dialogPanel"></div>
